<%= form_for(@message, html: { class: "form-horizontal" }) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label class="col-sm-2 control-label">名前：</label>
    <div class="col-sm-2">
      <%= f.text_field :name, :class => "form-control", :placeholder => "鈴木 太郎" %>
    </div>
    <div class="col-sm-8">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">年齢：</label>
    <div class="col-sm-2">
      <div style="width:70px;">
        <%= f.number_field :age, :class => "form-control" %>
      </div>
    </div>
    <div class="col-sm-8">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">内容：</label>
    <div class="col-sm-6">
      <%= f.text_area :body, :class => "form-control", :rows => 4 %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
     <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>